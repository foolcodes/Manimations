# Base image with Node.js and Python (needed for Manim)
FROM python:3.10-slim

# Install Node.js, FFmpeg, and other dependencies required for Manim
RUN apt-get update && \
    apt-get install -y curl ffmpeg git build-essential libcairo2-dev libpango1.0-dev \
    libjpeg-dev libgif-dev librsvg2-dev pkg-config libffi-dev texlive-latex-base \
    texlive-fonts-recommended texlive-fonts-extra texlive-latex-extra && \
    curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm && \
    apt-get clean

# Install Manim with all dependencies
RUN pip install --no-cache-dir manim

# Create working directory
WORKDIR /app

# Copy package.json and package-lock.json first for better caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Create necessary directories for Manim output
RUN mkdir -p generated_scripts videos

# Expose port
EXPOSE 5000

# Start server
CMD ["node", "index.js"]